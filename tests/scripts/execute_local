#!/bin/bash

  #--------------------------------------------------------------------------------
  # Get script parameters
  COMPSsExec=$1
  comm=$2
  runcompss_opts=$3
  baseDir=$4
  COMPSsLogFolder=$5
  skip=$6
  MAX_RETRIES=$7

  # Set script variables
  appsBaseDir="${baseDir}"/apps_basic
  logsBaseDir="${baseDir}"/logs
  summaryFile="${baseDir}"/summary

  exitValue=0
  results=""

  #--------------------------------------------------------------------------------
  # Source common execution script
  SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
  # shellcheck source=./execute_commons
  source "${SCRIPT_DIR}"/execute_commons

  #--------------------------------------------------------------------------------
  echo " "
  echo "**Testing Basic Block Apps"
  echo " "

  print_summary_header "${summaryFile}"

  for path in ${appsBaseDir}/*; do
    app=$(basename "$path")
    appBaseDir="${appsBaseDir}"/"${app}"
    appLogDir="${logsBaseDir}"/"${app}"

    lang=${app##*_}
    # Explanation:
    #   app - from variable
    #   ## - greedy front trim
    #   * - token match anything
    #   _ - until the last '_'

    if [ ${lang} == "python" ]; then
        # If python test ==> then check with python 2 and python 3
        execute_application "${COMPSsExec}" "${comm}" "${runcompss_opts}" "${summaryFile}" "${COMPSsLogFolder}" "${appBaseDir}" "${appLogDir}" "${skip}" "${MAX_RETRIES}" "${app}2" python2
        execute_application "${COMPSsExec}" "${comm}" "${runcompss_opts}" "${summaryFile}" "${COMPSsLogFolder}" "${appBaseDir}" "${appLogDir}" "${skip}" "${MAX_RETRIES}" "${app}3" python3
    else
        # If Java or C, perform simple execution
        execute_application "${COMPSsExec}" "${comm}" "${runcompss_opts}" "${summaryFile}" "${COMPSsLogFolder}" "${appBaseDir}" "${appLogDir}" "${skip}" "${MAX_RETRIES}" "${app}"
    fi
  done

  print_summary_footer "${summaryFile}"

  # Show Result table
  print_result "BASIC" "$results"

  #--------------------------------------------------------------------------------
  # EXIT
  exit "$exitValue"
